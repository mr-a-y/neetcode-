#leet code number 13 
class Solution {
    public int romanToInt(String s) {
        int tot =0;
        int a,b,c,d,e,f,g;
        a=b=c=d=e=f=g=0;
        for(int i=0;i<s.length();i++){
            if(s.charAt(i)=='I'){
                a++;
                }
            else if(s.charAt(i)=='V'){
                b++;
                if(a>0){a=a*-1;}
                }
            else if(s.charAt(i)=='X'){
                c++;
                if(a>0){a=a*-1;}
                }
            else if(s.charAt(i)=='L'){
                d++;
                if(c>0){c=c*-1;}
                }
            else if(s.charAt(i)=='C'){
                e++;
                if(c>0){c=c*-1;}
                }
            else if(s.charAt(i)=='D'){
                f++;
                if(e>0){e=e*-1;}
                }
            else if(s.charAt(i)=='M'){
                g++;
                if(e>0){e=e*-1;}
                }



        }
        return a+(b*5)+(c*10)+(d*50)+(e*100)+(f*500)+(g*1000);
    }
}
